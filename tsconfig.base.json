{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "lib": ["ES2021"],

    "baseUrl": ".",
    "paths": {
      "@shared/types": ["packages/shared-types/src"]
    },

    //"ignoreDeprecations": "all"
  }
}